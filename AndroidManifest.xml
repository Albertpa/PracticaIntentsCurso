<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aprendeandroid.practica_intents"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <uses-library android:name="com.google.android.maps" android:required="false" />
        
        <activity
            android:name="com.aprendeandroid.practica_intents.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.aprendeandroid.practica_intents.DialogActivity"
            android:label="Datos personales"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        
        
        <activity
            android:name="com.aprendeandroid.practica_intents.ListaActivity"
            android:label="@string/title_activity_lista" >
        </activity>
    </application>

</manifest>